<Page x:Class="WpfKolpakov.Pages.RoliPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfKolpakov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoliPage" Background="White">

    <Grid>
        <StackPanel Width="250">
            <Label Content="Укажите роль" Style="{StaticResource RoliLabel}" HorizontalAlignment="Center"/>
            <TextBox Height="23" TextWrapping="Wrap" Name="txbLogin"/>
            
                <Button x:Name="btnToTovary" Style="{StaticResource btnTo}" Content="К товарам" HorizontalAlignment="Center" Click="btnToTovary_Click" />
           
        </StackPanel>
    </Grid>
</Page>
